<div class="profile_wrapper">
	
	<div class="home_sidebar">
		<nav class="home_nav">
			<ul>
		  	<li class="navlink"><a href="/home"><i class="fa fa-home fa-2x" class="fontawesome"></i><span class="nav_item">Home</span></a></li>
		  	<li class="navlink"><a href="/profile"><i class="fa fa-user fa-2x" class="fontawesome"></i><span class="nav_item"> Profile</span></a></li>
		  	<li class="navlink"><a href="/contact_us"><i class="fa fa-envelope-square fa-2x" class="fontawesome"></i><span class="nav_item"> Contact Us </span></a></li>
		  	<li class="navlink"><a href="/"><i class="fa fa-sign-out fa-2x" class="fontawesome"></i><span class="nav_item">Logout</span></a></li>
			</ul>
		</nav>

		<hr id="sidebar_hr">
		
		<div id="profile_sidebar">
			<h2 class="sidebar_content">INTERESTS</h2>
				<p id="interests_text"><%= current_user.profile.interests %></p>
			<h2 class="sidebar_content">FOLLOWERS</h2>
			<% current_user.followers.each do |user| %>
			<ul>
			<li><%= user.fname + " " + user.lname %></h1></li>
			</ul>
			<% end %>
			<h2 class="sidebar_content">FOLLOWS</h2>
			<% current_user.follwed.each do |user| %>
			<ul>
			<li><%= user.fname + " " + user.lname %></li>
			</ul>
			<% end %>
			<h2 class="sidebar_content">LINKS</h2>
		</div>
	</div>

	<section id="profile_top">
		<header>
			<h1 id="profile_name"><%= current_user.fname + " " + current_user.lname %></h1>
			<button id="edit_profileBtn" onclick="window.location.href='/update_profile'" class="submitBtn">Update Profile</button>
			<div>
				<form method="POST" action="/user_id">
				 <input type="submit" class="submitBtn" id="delete_profileBtn" value="Delete Account">
				</form>
			</div>
		</header>

		<div id="profile_bio">
			<img id="profile_pic" src= "/img/profile_pic.png" alt="profile-pic"/>
			<div class="bio_content">
				<p class="bio_text" id="bio_text"><%= current_user.profile.bio %></p>
				<p class="bio_text" id="gender_text"><%= current_user.profile.gender %></p>
				<p class="bio_text" id="birthday_text"><%= current_user.profile.birthday %></p>
				<p class="bio_text" id="resident_text"><%= current_user.profile.resident %></p>
			</div>
		</div>
	</section>
		
<!-- 	<br clear="both">
 -->
	<section id="profile_bottom">
		<div id="profile_feed">

			<h2 id="profile_feed_title">My Tweets</h2>
			<p id="create_post">Create a New Tweet</p>

			<form method="POST" action="/post_profile_tweet" id="post_input">
				<input name="[post]title" class="title" type="text" placeholder="Title">
				<br><br>
				<textarea name="[post]body" class="textarea" type="text" placeholder="Enter content here"></textarea>
				<br><br>
				<input type="submit" class="post_submitBtn" value="Post">
			</form>

			<div id="profile_feed_method">
				<% Post.all.each do |post|%>
				    <hr color="grey">
					<div class="profile_post_title">   
					   <%= post.title %>
					</div>  
					<div class="profile_post_body"> 
					   <%= post.body %>
					</div>
					<br>
				<% end %>	
			</div>

		</div>
	</section>

</div>

























