
<div class="profile_wrapper">

	<section class="profile_top">
		<header>
			<h1 id="profile_name"><%= current_user.fname + " " + current_user.lname %></h1>
		</header>
<!-- 
		<div id="profile_bio">
			<img id="profile_pic" src= "/img/profile_pic.png" alt="profile-pic"/>
			<div class="bio_content">
				
			</div>
		</div> -->
	</section>
		
	<br clear="both">

	<section class="profile_bottom">
		<div id="profile_sidebar">
			<h2 class="sidebar_content">INTERESTS</h2>
			<h2 class="sidebar_content">FOLLOWERS</h2>
			<h2 class="sidebar_content">LINKS</h2>
		</div>

		<div id="profile_feed">

			<h2 id="profile_feed_title">My Posts</h2>
			<p id="create_post">Create a New Post</p>

			<form method="POST" action="/post_profile_tweet" id="post_input">
				<input name="[post]title" id="feed_title" type="text" placeholder="Title">
				<br><br>
				<textarea name="[post]body" id="feed_content" type="text" placeholder="Enter content here: "></textarea>
				<br><br>
				<input type="submit" id="feed_submitBtn" value="Post">
			</form>

			<div id="profile_feed_method">
				<% Post.all.each do |post|%>
				    <hr color="grey">
					<div class="profile_post_title">   
					   <%= post.title %>
					</div>  
					<div class="profile_post_body"> 
					   <%= post.body %>
					</div>
					<br>
				<% end %>	
			</div>

			<div>
				<form method="POST" action="/user_id">
				 <input type="submit" class="submitBtn" value="Delete Account">
				</form>
			</div>

		</div>
	</section>

</div>

























