    <div class="heading">
	    Tweets
	</div>
	<div id="tweets_method">
		<% Post.all.each do |post|%>
			<hr color="grey">
			<div class="post_fname">
			@<%=post.user.fname.capitalize + " " + post.user.lname.capitalize %>
			   <span><%= date(post.created_at) %></span>
			   <button type="button" value="plus" name="plus" formmethod="POST" formaction="/follow" class="submitBtn"> +</button>
			</div>
			<div class="post_title">   
			   <%=post.title %>

			</div>  
			<div class="post_body"> 
				<%= post.body %>
			</div>
			<br>
		<% end %>	
	</div>
		
    </div>
</div>


